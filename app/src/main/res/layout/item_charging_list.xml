<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/charglist_bg_shape"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/plate"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_licensePlate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粤B12345"
                    android:textSize="15sp"
                    android:textColor="#FF101734"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textSize="11sp"
                        android:textColor="#FFF84444"/>

                    <TextView
                        android:id="@+id/tv_amountOfConsumption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999"
                        android:textSize="18sp"
                        android:textColor="#FFF84444"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/charging"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOC："
                    android:textSize="14sp"
                    android:textColor="#FF575C71"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_4"/>

                <TextView
                    android:id="@+id/tv_soc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="86%"
                    android:textSize="14sp"
                    android:textColor="#01CA7E"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/electricity"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_25"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已充电量："
                    android:textSize="14sp"
                    android:textColor="#FF575C71"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_4"/>

                <TextView
                    android:id="@+id/tv_chargedElectricity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="319kw.h"
                    android:textSize="14sp"
                    android:textColor="#4498F8"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_4"/>

                <ImageView
                    android:id="@+id/iv_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pause"
                    android:scaleType="centerCrop"
                    android:gravity="right"
                    android:padding="@dimen/dp_5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_stationName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="港圻充电站"
                    android:textSize="12sp"
                    android:textColor="#FF575C71"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021-09-08 16:40:30"
                    android:textSize="12sp"
                    android:textColor="#FF575C71"
                    android:gravity="right" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>