<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_member_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/close"
            android:scaleType="centerCrop"
            android:padding="@dimen/dp_20"/>

        <TextView
            android:id="@+id/tv_member_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加成员"
            android:textSize="17sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textSize="17sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_16"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_white"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="vertical"
        android:elevation="@dimen/dimen_2_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57">

            <TextView
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textSize="15sp"
                android:textColor="#FF575C71"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_12"/>

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColorHint="#B3B5BE"
                android:textSize="@dimen/sp_15"
                android:inputType="phone"
                android:layout_marginLeft="@dimen/dp_15"
                android:maxLength="11"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_px"
            android:background="#EEEEEE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57">

            <TextView
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="15sp"
                android:textColor="#FF575C71"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_12"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入姓名"
                android:textColorHint="#B3B5BE"
                android:textSize="@dimen/sp_15"
                android:layout_marginLeft="@dimen/dp_15"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_px"
            android:background="#EEEEEE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:text="绑定车牌"
                android:textSize="15sp"
                android:textColor="#FF575C71"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_province"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:background="@drawable/shape_et_bg"
                        android:textSize="@dimen/text_size_12_sp"
                        android:hint=""
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/new_text_color"
                        android:maxLength="1"/>

                    <EditText
                        android:id="@+id/et_letter"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:background="@drawable/shape_et_bg"
                        android:textSize="@dimen/text_size_12_sp"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:hint=""
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/new_text_color"
                        android:maxLength="1"/>

                    <EditText
                        android:id="@+id/et_number"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_24"
                        android:background="@drawable/shape_et_bg"
                        android:textSize="@dimen/text_size_12_sp"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:hint=""
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/new_text_color"
                        android:maxLength="7"/>

                    <ImageView
                        android:id="@+id/iv_add_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_member_plate"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_12"
                        android:visibility="gone"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_add_member_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/et_province_two"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:background="@drawable/shape_et_bg"
                        android:textSize="@dimen/text_size_12_sp"
                        android:hint=""
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/new_text_color"
                        android:maxLength="1"/>

                    <EditText
                        android:id="@+id/et_letter_two"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:background="@drawable/shape_et_bg"
                        android:textSize="@dimen/text_size_12_sp"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:hint=""
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/new_text_color"
                        android:maxLength="1"/>

                    <EditText
                        android:id="@+id/et_number_two"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_24"
                        android:background="@drawable/shape_et_bg"
                        android:textSize="@dimen/text_size_12_sp"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:hint=""
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/new_text_color"
                        android:maxLength="7"/>

                    <ImageView
                        android:id="@+id/iv_add_member_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_member_plate"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_12"/>

                    <ImageView
                        android:id="@+id/iv_delete_member_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/delete_member"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_12"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_add_member_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/et_province_three"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:background="@drawable/shape_et_bg"
                        android:textSize="@dimen/text_size_12_sp"
                        android:hint=""
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/new_text_color"
                        android:maxLength="1"/>

                    <EditText
                        android:id="@+id/et_letter_three"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:background="@drawable/shape_et_bg"
                        android:textSize="@dimen/text_size_12_sp"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:hint=""
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/new_text_color"
                        android:maxLength="1"/>

                    <EditText
                        android:id="@+id/et_number_three"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_24"
                        android:background="@drawable/shape_et_bg"
                        android:textSize="@dimen/text_size_12_sp"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:hint=""
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/new_text_color"
                        android:maxLength="7"/>

                    <ImageView
                        android:id="@+id/iv_add_member_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_member_plate"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_12"/>

                    <ImageView
                        android:id="@+id/iv_delete_member_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/delete_member"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_12"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>