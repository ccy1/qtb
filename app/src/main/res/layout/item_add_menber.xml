<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_95"
        android:background="@mipmap/member_bg"
        android:layout_marginBottom="@dimen/dp_8"
        android:elevation="@dimen/dimen_2_dp">


        <ImageView
            android:id="@+id/iv_member_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/member_icon"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/iv_member_icon"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:textSize="15sp"
                    android:textColor="#FF101734"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/member_plate"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_plate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#FF575C71"
                    android:layout_marginLeft="@dimen/dp_4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/member_phone"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_4"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#FF575C71"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_delete_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/member_delete"
            android:scaleType="centerCrop"
            android:padding="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>