<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_50_dp"
    android:orientation="horizontal"
    android:background="#00000000"
    >


    <RelativeLayout
        android:layout_width="@dimen/dimen_50_dp"
        android:layout_height="@dimen/dimen_50_dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/new_back_five"
            android:layout_centerInParent="true"
            android:padding="@dimen/dimen_20_dp"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/dimen_10_dp"
        android:singleLine="true"
        android:text=""
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_18_sp"
        />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:text="标题"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_17_sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_menu"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_50_dp"
        android:layout_marginRight="14dp"
        android:padding="@dimen/dimen_10_dp"
        android:layout_centerVertical="true"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_16_sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:background="@drawable/tv_menu_selector"/>

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/dimen_50_dp"
        android:layout_height="@dimen/dimen_50_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/tv_view_read"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dimen_10_dp"
            android:layout_height="@dimen/dimen_10_dp"
            android:layout_marginRight="@dimen/dimen_12_dp"
            android:layout_marginTop="@dimen/dimen_12_dp"
            android:background="@drawable/circle_red"
            android:textColor="@color/colorWhite"
            android:visibility="gone"
            android:textSize="10sp"
            />
        <ImageView
            android:id="@+id/iv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_main_right"
            />

    </RelativeLayout>



</RelativeLayout>



